<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
    http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
      http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>runtime</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<outputDirectory>/docker</outputDirectory>
			<directory>target/docker</directory>
		</fileSet>
		<fileSet>
			<outputDirectory>/k8s</outputDirectory>
			<directory>k8s</directory>
		</fileSet>
		<fileSet>
			<outputDirectory>/helm</outputDirectory>
			<directory>helm</directory>
		</fileSet>
		<fileSet>
			<outputDirectory>/m2</outputDirectory>
			<directory>m2</directory>
		</fileSet>
		<fileSet>
			<outputDirectory>/</outputDirectory>
			<directory>instructions</directory>
			<includes>
				<include>*.pdf</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>/</outputDirectory>
			<directory>${project.build.directory}/bundle</directory>
		</fileSet>
	</fileSets> 
	<dependencySets>
		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<excludes>
			</excludes>
			<useStrictFiltering>true</useStrictFiltering>
			<useProjectArtifact>false</useProjectArtifact>
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>
</assembly>